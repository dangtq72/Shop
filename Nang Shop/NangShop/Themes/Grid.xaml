    <Style x:Key="TitleStyle" TargetType="{x:Type Grid}"/>
 
    <!--<Style x:Key="BottomGrid" TargetType="{x:Type Grid}"/>-->
    
    <Style x:Key="TopGrid" TargetType="{x:Type Grid}"/>

    <Style x:Key="bg_01" TargetType="{x:Type Grid}"/>
</ResourceDictionary>